# -*- sh -*-
# These things are run when an Openbox X Session is started.
# You may place a similar script in $HOME/.config/openbox/autostart
# to run user-specific things.
#

# If you want to use GNOME config tools...
#
#if test -x /usr/lib/openbox/gnome-settings-daemon >/dev/null; then
#  /usr/lib/openbox/gnome-settings-daemon &
#elif which gnome-settings-daemon >/dev/null 2>&1; then
#  gnome-settings-daemon &
#fi

# If you want to use XFCE config tools...
#
#xfce-mcs-manager &

# Apply urxvt settings
xrdb -merge ~/.Xresources &

# rofi
rofi -modi "window,drun,run" &

# compton
compton -b --config $HOME/.config/compton/compton.conf &

# wallpaper
~/.local/bin/setwallpaper &

# polybar
~/.local/bin/polybar-${DISTRO:-common}-top &

# emacs server
emacs --daemon &

# sxhkd
sxhkd -c $XDG_CONFIG_HOME/sxhkd/sxhkdrc

# polkit
case $DISTRO in
    gentoo)
        sleep 1 && /usr/libexec/polkit-gnome-authentication-agent-1 &
        ;;
    arch)
        sleep 1 && /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
        ;;
esac
