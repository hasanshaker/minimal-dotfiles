# -*- conf -*-

# Basic binds
# terminal
super + Return
$TERMINAL

# file manager
super + r
$FILE

# htop
super + i
$TERMINAL -e htop

# pulsemixer
super + shift + a
$TERMINAL -e pulsemixer

# browser
super + w
$BROWSER

# gimp
super + g
gimp

# Et cetera...
# dmenuunicode, from voidrice
super + grave
dmenuunicode

# screenkey
super + Scroll_Lock
killall screenkey || screenkey

# showclip script
super + Insert
showclip

# restart and shutdown
super + shift + x
prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
prompt "Reboot computer?" "sudo -A shutdown -r now"

# Network Manager interface
super + F12
$TERMINAL -e sudo -A nmtui
