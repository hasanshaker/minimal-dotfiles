# -*- conf -*-

# Basic binds
# terminal
super + Return
      $TERMINAL

# file manager
super + r
      $FILE

# htop
super + i
      $TERMINAL -e htop

# pulsemixer
super + shift + a
      $TERMINAL -e pulsemixer

# browser
super + w
      $BROWSER

# gimp
super + g
      gimp

# visual editor (inside X)
super + e
      ${VISUAL}

# terminal editor
super + shift + e
      ${TERMINAL} -e ${ALTERNATE_EDITOR}

# Et cetera...
# dmenuunicode, from voidrice
super + grave
      dmenuunicode

# screenkey
super + Scroll_Lock
      killall screenkey || screenkey

# showclip script
super + Insert
      showclip

# restart and shutdown
super + shift + x
      prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
      prompt "Reboot computer?" "sudo -A shutdown -r now"

# toggle polybar visibility
super + F11
      ~/.local/bin/poly-hide.sh

# Network Manager interface
super + F12
      $TERMINAL -e nmtui

# Screen capturing
Print
        sh -c "maim -u -n -l -c 0.157,0.333,0.466,0.4 ~/Pictures/Screenshots/Screenshot-$(date -Iseconds | cut -d'+' -f1).png"
ctrl + Print
        sh -c "maim -u -s -n -l -c 0.157,0.333,0.466,0.4 | xclip -selection clipboard -t image/png"
super + Print
      ~/.local/bin/record-screen byzanz
alt + Print
      ~/.local/bin/record-screen gif
shift + Print
      ~/.local/bin/record-screen ogv

# help
#super + F1
#      sh -c "groff -mom ~/.local/share/dotfiles/readme.mom -Tpdf | zathura -"
super + F1
      sh -c "emacs -u $(id -un) --batch --eval '(load user-init-file)' ~/.local/share/dotfiles/readme.org -f org-latex-export-to-pdf | zathura ~/.local/share/dotfiles/readme.pdf"
