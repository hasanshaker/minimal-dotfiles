; -------------------------------------------------------------------------------
; COLORS
; -------------------------------------------------------------------------------
[colors]

glass  = #00000000
light  = #eeeeeeee
ash    = #88ffffff
dark   = #5a000000
darker = #88000000

; -------------------------------------------------------------------------------
; BARS
; -------------------------------------------------------------------------------

[bar/preset]
bottom  = false
width = 0
;height = 33
radius = 5
;border-top-size = 0
;border-bottom-size = 10
border-left-size = 10
border-right-size = 10
border-color = ${colors.glass}
underline-size = 1
underline-color = ${colors.light}
module-margin-left = 0
module-margin-right = 0
font-0 = Source Code Pro:style=Regular:pixelsize=8;1
font-1 = FontAwesome:size=8;1

;[bar/middle]
;inherit = bar/preset
;width = 700
;offset-x = 0
;background = ${colors.dark}
;modules-middle= crypto

[bar/xwindow]
inherit = bar/preset
width = 200
offset-x = 0
background = ${colors.dark}
modules-left= xwindow

[bar/sys]
inherit = bar/preset
width = 340
offset-x = 1024
background = ${colors.dark}
modules-right = pulseaudio wireless-network time

; -------------------------------------------------------------------------------
; MODULES
; -------------------------------------------------------------------------------
[module/xwindow]
type = internal/xwindow

label = %title:0:22:...%
label-padding = 0
;label-foreground = ${colors.ash}

[module/time]
type = internal/date

interval = 1.0
date = %a %d %b
time = %l:%M %p
label = ï„³ %date% ï€— %time%

format = <label>
;format-foreground = ${colors.ash}
;format-background = ${colors.darker}
format-padding = 3

[module/wireless-network]
type = internal/network
interface = wlp0s29u1u3
;interval = 3.0
unknown-as-up = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-connected-prefix = "ï‡«"
format-packetloss = <animation-packetloss> <label-connected>
label-connected = %downspeed:7%
label-disconnected = not connected

animation-packetloss-0 = âš 
animation-packetloss-1 = ğŸ“¶
animation-packetloss-framerate = 500

[module/wired-network]
type = internal/network

interface = enp3s0

label-connected = "ï‡« "
label-disconnected = ï€

format-connected =  <label-connected>
format-connected-foreground = ${colors.ash}
format-connected-padding = 4

format-disconnected =  <label-disconnected>
format-disconnected-padding = 4

[module/pulseaudio]
type = internal/pulseaudio

interval = 5
use-ui-max = true

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2

format-muted = <label-muted>

label-volume =  "%{F#777}ïƒš%{F-}%percentage:3%%"
label-muted = "  ï€¦ %{F#777}ïƒš%{F-} ï€ "

ramp-volume-0 = ï€¦
ramp-volume-1 = ï€§
ramp-volume-2 = ï€¨

[module/crypto]
type = custom/script
interval = 300
exec = ~/.config/polybar/crypto.py

[global/wm]
margin-top = 0
